{{#each posts as |post|}}
<div class="post">
    <div class="display-flex justify-space-between align-center post-title">
        <h4>
            <a href="/post/{{post.id}}" class="post-link">{{post.title}}</a>
        </h4>
        <p>Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
    </div>
    <div class="post-content">
        {{post.content}}
    </div>
</div>
{{/each}}
